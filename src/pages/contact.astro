---
import BaseLayout from "../layouts/BaseLayout.astro";
import { site } from "../config/site";
---
<BaseLayout title="Contact | vertex_chaos">
  <h1 class="text-3xl font-semibold">Contact</h1>
  <p class="mt-4 text-slate-600">Email is fastest.</p>
  <a
    href={site.links.email}
    class="mt-6 inline-flex rounded-xl bg-slate-900 px-5 py-3 text-sm font-semibold text-white no-underline hover:bg-slate-800"
  >
    Email me
  </a>
</BaseLayout>

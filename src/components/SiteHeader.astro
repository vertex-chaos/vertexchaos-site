---
import { site } from "../config/site";
---

<header class="border-b border-slate-200 bg-white">
  <div class="mx-auto flex max-w-6xl items-center justify-between px-6 py-4">
    <a href="/" class="flex items-center gap-3 no-underline">
      <span class="grid h-8 w-8 place-items-center rounded-md bg-slate-900 text-xs font-semibold text-white">
        vc
      </span>
      <span class="text-sm font-semibold text-slate-900">{site.brand}</span>
    </a>

    <nav class="hidden items-center gap-6 text-sm text-slate-600 md:flex">
      {site.nav.map((n) => (
        <a class="no-underline hover:text-slate-900" href={n.href}>{n.label}</a>
      ))}
    </nav>

    <a
      href={site.links.contact}
      class="rounded-xl bg-slate-900 px-4 py-2 text-sm font-semibold text-white no-underline hover:bg-slate-800"
    >
      Contact
    </a>
  </div>
</header>

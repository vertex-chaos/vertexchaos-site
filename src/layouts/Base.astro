---
import "../styles/global.css"
import { site as DefaultSite } from "../config/site";

const {
  title = DefaultSite.brand,
  description = DefaultSite.subhead,
  site: siteProp,
} = Astro.props;

const site = siteProp ?? DefaultSite;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>

  <body class="bg-white text-slate-900 antialiased">
    <slot />

    <footer class="mx-auto mt-16 max-w-6xl px-6 py-10 text-sm text-slate-500">
      <div class="flex items-center justify-between border-t border-slate-200 pt-6">
        <span>Â© {new Date().getFullYear()} {site.brand}</span>
        <a class="no-underline hover:text-slate-900" href={site.githubOrgBase}>GitHub</a>
      </div>
    </footer>
  </body>
</html>

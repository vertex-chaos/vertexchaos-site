---
import "../styles/global.css";
import { site } from "../config/site";
const { title = site.brand, description = site.lede } = Astro.props;
const url = new URL(Astro.request.url);
const canonical = `${site.domain}${url.pathname}`;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={`https://${canonical}`} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={`https://${canonical}`} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="theme-color" content="#0b0d12" />
  </head>
  <body>
    <header>
      <div class="container">
        <div class="nav">
          <a class="brand" href="/">
            <span class="name">{site.brand}</span>
</a>
          <nav class="links" aria-label="Primary">
            <a href="/services">Services</a>
            <a href="/work">Work</a>
            <a href="/repos">Repos</a>
            <a href="/about">About</a>
            <a class="btn" href="/contact">Contact</a>
          </nav>
        </div>
      </div>
    </header>

    <main>
      <div class="container">
        <slot />
      </div>
    </main>

    <footer>
      <div class="container">
        <div class="foot">
          <div>
            <div><strong>{site.companyName}</strong></div>
            <div class="smallmono">Oregon-based. Remote-friendly. Timezone: {site.timezone}.</div>
          </div>
          <div class="smallmono">
            <a href={site.social.githubOrg}>GitHub</a> · <a href={site.social.linkedin}>LinkedIn</a> · <a href={`mailto:${site.email}`}>{site.email}</a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
